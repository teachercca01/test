    +formFieldset("メールアドレス", "email", "email", "sample@gmail.com", "email-label")
    +formFieldset("メールアドレス(確認用)", "email-confirm", "email", "sample@gmail.com", "email-confirm-label", true)
    +formFieldset("お問い合わせ内容", "comment", "textarea", "お問い合わせ内容を入力してください。", "comment-label", true, true)
    .c-form__submit
